<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <!-- Imagem no topo - SEM BORDAS -->
        <ImageView
            android:layout_width="98dp"
            android:layout_height="86dp"
            android:background="@android:color/transparent"
            android:contentDescription="Logo Comedoria da Tia"
            android:padding="0dp"
            android:src="@drawable/logo" />

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comedoria da Tia"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textColor="@color/green2"
            android:gravity="center" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faça Login:"
            android:textSize="24dp"
            android:textColor="@color/green2"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="25dp" />

        <!-- Campo E-mail -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="E-mail"
            android:textColorHint="@color/green1"
            app:boxStrokeColor="#2E7D32">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2E7D32"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo Senha -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Senha"
            android:textColorHint="@color/green1"
            app:boxStrokeColor="#2E7D32">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2E7D32"
                android:inputType="textPassword"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botão Entrar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTRAR"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/green2"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.1" />

        <!-- Link de cadastro -->
        <TextView
            android:id="@+id/txtCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda não tem cadastro? Cadastre-se"
            android:textColor="@color/green2"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="32dp" />

        <!-- Divisor com linha central -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#2E7D32"
                android:layout_centerVertical="true"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ou"
                android:textColor="@color/green2"
                android:paddingHorizontal="16dp"
                android:background="#E8F5E8"
                android:layout_centerInParent="true"
                android:textSize="14sp" />

        </RelativeLayout>

        <!-- Botão Google -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAÇA LOGIN COM O GOOGLE"
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:textColor="@color/green2"
            android:padding="16dp"
            android:letterSpacing="0.05"
            app:icon="@drawable/googlelogo"
            app:iconSize="30dp"
            app:iconPadding="8dp"
            app:iconTint="@null"
            app:iconGravity="textStart" />

    </LinearLayout>

</ScrollView>