<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ComedoriaTia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Define your app's primary color -->
        <item name="colorPrimary">@color/green1</item>
        <item name="colorPrimaryVariant">@color/green1</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Optional: Define other theme colors if needed -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Splash Screen Theme for Night Mode -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white1</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.ComedoriaTia</item>
    </style>
</resources>